@model List<Kiralama>
@if (TempData["Basarili"] != null)
{
    <h2 style="color:red">@TempData["Basarili"]</h2>
}

<div class="container"> 
    <div class="row pt-3 pb-4">
        <div>
            <h1>Kitap Kiralamaları</h1>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Öğrenci Id</th>
                <th>Kitap Id</th>
                @* güncelle ve sil butonu için alan *@
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kiralama in Model) 
            { 
                <tr>
                    <td>@kiralama.Id</td>
                    <td>@kiralama.OgrenciId</td>
                    <td>@kiralama.KitapId</td>
                    <td>@kiralama.Kitap.KitapAdi</td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" type="button" class="btn btn-info" style="width:250px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
                Yeni Kiralama İşlemi
            </a>
        </div>
    </div>
</div> 